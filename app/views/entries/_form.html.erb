<%= form_for @entry do |f| %>
	<div>
		<%= f.label :title %><br />
		<%= f.text_field :title, :required => true  %>
	</div>
	<br>
	<div>
		<%= f.label :"Date" %><br />
		<%= f.text_field :entry_date, :class=>"datepicker", :required => true  %>
	</div>
	<br>
	<div>
			<%= f.label "Entry"%> <br />
			<%= f.text_area :content, :required => true, :cols => "70", :rows => "12", :class=>"textbox" %>
	</div>
	<br>
	<div><%= f.submit :class=>"btn btn-success" %></div>
<% end %>